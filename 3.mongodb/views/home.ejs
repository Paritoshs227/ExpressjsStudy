<%- include("partials/header") %>

    <div class="text-end">
        <a href="/add-contact" class="btn btn-success my-3">Add New Contact</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach((item, index) => {%>
                <tr>
                    <th scope="row"><%= index + 1 %></th>
                    <th><%= item.firstName %></th>
                    <td><%= item.lastName %></td>
                    <td><%= item.email %></td>
                    <td><%= item.mobile %></td>
                    <td>
                        <a href="/show-contact/<%= item._id %>" class="btn btn-primary">view</a>
                        <a href="/update-contact/<%= item._id %>" class="btn btn-info">Edit</a>
                        <a href="/delete-contact/<%= item._id %>" class="btn btn-danger" onclick="return confirm('Are you sure to delete..??')">Delete</a>
                    </td>
                </tr>

                <% }); %>

        </tbody>
    </table>

    <%- include("partials/footer") %>